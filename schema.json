{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "list",
    "description": "An army list",
    "type": "object",
    "properties": {
        "name": {
            "description": "Name this army",
            "type": "string"
        },
        "gameSizePts": {
            "description": "Set your game size (pts)",
            "type": "number"
        },
        "commanders": {
            "description": "Define the commanders assigned to this army",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "commanderLVL": {
                        "type": "number"
                    },
                    "commanderAssignment": {
                        "type": "string"
                    }
                }
            }
        },
        "bgs": {
            "description": "Define your battlegroups",
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "units": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "unit": {
                                        "type": "string"
                                    },
                                    "number": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "transports": {
            "description": "Transport assignment",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "transport": {
                        "type": "string"
                    },
                    "bg": {
                        "type": "number"
                    },
                    "squad": {
                        "type": "number"
                    }
                }
            }
        }
    }
}